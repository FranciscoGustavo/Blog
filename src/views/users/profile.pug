extends ../layouts/template.pug

block content
    .mdl-grid.portfolio-max-width
        .mdl-cell.mdl-cell--12-col
            a(href="/logout").mdl-button.mdl-js-button.mdl-button--raised.mdl-button--colored Serrar Sesion
        .mdl-cell.mdl-cell--4-col
            -var cover = 'background: url(http://localhost:3000/users/get-photo/' + user.photo + ') center / cover;'

            .demo-card-image.mdl-card.mdl-shadow--2dp(style=cover)
                .mdl-card__title.mdl-card--expand
                .mdl-card__actions
                    span.demo-card-image__filename= user.name
        .mdl-cell.mdl-cell--4-col
            .demo-card-event.mdl-card.mdl-shadow--2dp
                .mdl-card__title.mdl-card--expand
                    h4 Featured event: May 24, 2016 7-11pm
                    
                .mdl-card__actions.mdl-card--border
                    a.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect(href="/blog/new") nuevo post
                
                    .mdl-layout-spacer
                    i.material-icons event
        
        .mdl-cell.mdl-cell--4-col
            .demo-card-event.mdl-card.mdl-shadow--2dp
                .mdl-card__title.mdl-card--expand
                    h4 Featured event: May 24, 2016 7-11pm
                    
                .mdl-card__actions.mdl-card--border
                    a.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect(href="/projects/new") Nuevo proyecto
                
                    .mdl-layout-spacer
                    i.material-icons event
        .mdl-cell.mdl-cell--12-col
            .mdl-tabs.mdl-js-tabs.mdl-js-ripple-effect
                .mdl-tabs__tab-bar
                    a(href="#starks-panel").mdl-tabs__tab.is-active Posts
                    a(href="#lannisters-panel").mdl-tabs__tab Projects
                

                .mdl-tabs__panel.is-active#starks-panel
                    ul.demo-list-two.mdl-list
                        each post in posts
                            li.mdl-list__item.mdl-list__item--two-line
                                span.mdl-list__item-primary-content
                                    i.material-icons.mdl-list__item-avatar person
                                    span=post.title
                                
                                span.mdl-list__item-secondary-content
                                    a.mdl-list__item-secondary-action(href="/blog/edit/" + post.slug)
                                        i.material-icons edit
                                    a.mdl-list__item-secondary-action(href="/blog/" + post.slug target="_blank")
                                        i.material-icons remove_red_eye
                .mdl-tabs__panel#lannisters-panel
                    ul.demo-list-two.mdl-list
                        each project in projects
                            li.mdl-list__item.mdl-list__item--two-line
                                span.mdl-list__item-primary-content
                                    i.material-icons.mdl-list__item-avatar person
                                    span=project.title
                                
                                span.mdl-list__item-secondary-content
                                    a.mdl-list__item-secondary-action(href="/projects/edit/" + project._id)
                                        i.material-icons edit
                                    a.mdl-list__item-secondary-action(href="/projects/" + project._id target="_blank")
                                        i.material-icons remove_red_eye
extends ../layouts/template.pug

block content  
    .mdl-grid.portfolio-max-width
        .mdl-cell.mdl-cell--12-col.mdl-card.mdl-shadow--4dp
            .mdl-card__title
                h2.mdl-card__title-text=post.title
            
            .mdl-card__media
                - var cover = 'http://localhost:3000/blog/get-cover/' + post.cover
                img.article-image(src=cover border="0" alt="")
            
            .mdl-card__supporting-text
                strong Includes
                span Design, UX and Frontend Development
            
            .mdl-grid.portfolio-copy.m-0
                div(style="width: 100%;")
                    !=body

